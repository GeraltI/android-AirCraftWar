<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aircraftwar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AircraftWar"
        tools:targetApi="s">
        <activity
            android:name=".Activities.GameOnlineSelectActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameOnlineRankListActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameOnlineRankListSelectActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameLoginActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameMenuActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameEnrollActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameRankListSelectActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameOnlineActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameRankListActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GameMallActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.GameSelectActivity"
            android:exported="true"
            tools:ignore="MissingClass,WrongManifestParent" />

        <service
            android:name=".Game.MusicService.MusicService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>